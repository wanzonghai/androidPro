<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/valley1">
    <!-- 返回按钮 -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/r1"
        android:onClick="onBackButtonClick" />
    <Button
        android:id="@+id/helpButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="18dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/r2" />

    <Button
        android:id="@+id/shareButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="88dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/fenxang" />
    <TextView
        android:id="@+id/scoreTextView"
        android:layout_width="300dp"
        android:layout_height="31dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="Mark: 0"
        android:textColor="#FF00FF"
        android:textSize="20dp"
        android:layout_marginTop="8dp" />
    <TextView
        android:id="@+id/timerTextView"
        android:layout_width="300dp"
        android:layout_height="31dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/scoreTextView"
        android:gravity="center"
        android:text="Timer: 0"
        android:textColor="#FF00FF"
        android:textSize="20dp"
        android:layout_marginTop="8dp" />
    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/timerTextView"
        android:layout_marginTop="16dp"
        android:text="问题: 2 + 2 = ?"
        android:textColor="#FF00FF"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/answerEditText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/questionTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:inputType="number" />

    <Button
        android:id="@+id/submitAnswerButton"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/answerEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/r1"
        android:onClick="handleSubmitButtonClick" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="182dp"
        android:layout_height="57dp"
        android:background="@drawable/valley2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp" />
</RelativeLayout>